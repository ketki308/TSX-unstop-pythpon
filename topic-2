#area and perimeter of rectangle

l=int(input("enter the value of length : "))
w=int(input("enter the vale of width : "))
p=2*(l+w)
a=l*w
print(f'The perimeter of a rectangle : {p}')
print(f'The area of a rectangle : {a}')

#comparision between values

num1 = float(input("Enter the first number: "))
num2 = float(input("Enter the second number: "))
if num1 > num2:
    print("The first number is greater than the second number.")
elif num1 < num2:
    print("The first number is less than the second number.")
else:
    print("The first number is equal to the second number.")

#checking leap year

year = int(input("Enter a year: "))

if (year % 4 == 0) and (year % 100 != 0 or year % 400 == 0):
    print(f"{year} is a leap year.")
else:
    print(f"{year} is not a leap year.")

#airthmetic operations

# Addition
5 + 3         # Output: 8

# Subtraction
10 - 4        # Output: 6

# Multiplication
7 * 6         # Output: 42

# Division (floating point)
15 / 2        # Output: 7.5

# Modulus (remainder)
15 % 2        # Output: 1

#logical operations

(5 > 3) and (2 < 4)       # Output: True
(5 == 5) or (3 > 10)      # Output: True
not (10 == 10)            # Output: False

#concatenates two strings

str1 = input("Enter the first string: ")
str2 = input("Enter the second string: ")
result = str1 + str2
print("Concatenated string:", result)
